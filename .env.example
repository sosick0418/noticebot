# ===========================================
# Binance Bollinger Notice Bot Configuration
# ===========================================

# Binance API Configuration (Testnet)
# Get testnet keys from: https://testnet.binancefuture.com
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Use testnet (true for development, false for production)
BINANCE_TESTNET=true

# Telegram Bot Configuration
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Trading Configuration
SYMBOL=BTCUSDT
INTERVAL=15m

# Bollinger Bands Configuration
BB_PERIOD=20
BB_STD_DEV=2

# Volatility Filter Configuration
# Bandwidth threshold for squeeze detection (0.04 = 4%)
# Signals are disabled when bandwidth is below this value
BANDWIDTH_THRESHOLD=0.04

# Logging Configuration
LOG_LEVEL=info

# Watchdog Configuration (seconds)
WATCHDOG_TIMEOUT=60
